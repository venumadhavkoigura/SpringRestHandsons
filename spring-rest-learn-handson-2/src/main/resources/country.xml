<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.springframework.org/schema/beans 
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

<bean id="country" class="com.cognizant.springlearn.Country" scope="prototype">
<property name="code" value="IN"></property>
<property name="name" value="India"></property>
</bean>

<bean id="in" class="com.cognizant.springlearn.Country" scope="prototype">
<property name="code" value="IN"></property>
<property name="name" value="India"></property>
</bean>

<bean id="us" class="com.cognizant.springlearn.Country" scope="prototype">
<property name="code" value="US"></property>
<property name="name" value="United States"></property>
</bean>

<bean id="de" class="com.cognizant.springlearn.Country" scope="prototype">
<property name="code" value="DE"></property>
<property name="name" value="GERMANY"></property>
</bean>

<bean id="jp" class="com.cognizant.springlearn.Country" scope="prototype">
<property name="code" value="JP"></property>
<property name="name" value="JAPAN"></property>
</bean>

<bean id="countryList" class="java.util.ArrayList">
<constructor-arg>
<list>
<ref bean="in"></ref>
<ref bean="us"></ref>
<ref bean="de"></ref>
<ref bean="jp"></ref>
</list>
</constructor-arg>
</bean>

</beans>